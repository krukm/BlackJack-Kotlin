<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.krukm.blackjack.PlayBlackJack">

    <ImageView
        android:id="@+id/player_card1_view"
        android:layout_width="57dp"
        android:layout_height="88dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/draw_button_view"
        app:srcCompat="@drawable/card"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dealer_card1_view"
        app:layout_constraintVertical_bias="0.845"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/player_card2_view"
        android:layout_width="57dp"
        android:layout_height="88dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/draw_button_view"
        app:srcCompat="@drawable/card"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dealer_card2_view"
        app:layout_constraintVertical_bias="0.845"
        app:layout_constraintLeft_toRightOf="@+id/player_card1_view"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/player_card3_view"
        android:layout_width="57dp"
        android:layout_height="88dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/draw_button_view"
        app:srcCompat="@drawable/card"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dealer_card3_view"
        app:layout_constraintVertical_bias="0.845"
        app:layout_constraintLeft_toRightOf="@+id/player_card2_view"
        android:layout_marginLeft="22dp"/>

    <ImageView
        android:id="@+id/player_card4_view"
        android:layout_width="57dp"
        android:layout_height="88dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/draw_button_view"
        app:srcCompat="@drawable/card"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dealer_card4_view"
        app:layout_constraintVertical_bias="0.845"
        app:layout_constraintLeft_toRightOf="@+id/player_card3_view"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/player_card5_view"
        android:layout_width="57dp"
        android:layout_height="88dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/draw_button_view"
        app:layout_constraintLeft_toRightOf="@+id/player_card4_view"
        app:layout_constraintTop_toBottomOf="@+id/dealer_card4_view"
        app:layout_constraintVertical_bias="0.845"
        app:srcCompat="@drawable/card"
        />

    <Button
        android:id="@+id/draw_button_view"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Draw"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.182"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.87"/>

    <Button
        android:id="@+id/stand_button_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Stand"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.669"
        app:layout_constraintLeft_toRightOf="@+id/draw_button_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.87"/>

    <Button
        android:id="@+id/reset_button"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Reset"
        app:layout_constraintBottom_toTopOf="@+id/draw_button_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_status_view"
        app:layout_constraintVertical_bias="0.008"/>

    <TextView
        android:id="@+id/score_view"
        android:layout_width="127dp"
        android:layout_height="39dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Your Total: "
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/draw_button_view"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/dealer_score_view"/>

    <TextView
        android:id="@+id/dealer_score_view"
        android:layout_width="155dp"
        android:layout_height="36dp"
        android:layout_marginBottom="330dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Dealer Total:"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/dealer_score_value_view"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dealer_card1_view"
        app:layout_constraintHorizontal_bias="0.397"
        app:layout_constraintVertical_bias="1.0"/>

    <TextView
        android:id="@+id/score_value_view"
        android:layout_width="105dp"
        android:layout_height="39dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="0"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/score_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stand_button_view"
        app:layout_constraintVertical_bias="0.157"/>


    <TextView
        android:id="@+id/dealer_score_value_view"
        android:layout_width="95dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="0"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/stand_button_view"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dealer_card5_view"
        app:layout_constraintVertical_bias="0.027"/>

    <TextView
        android:id="@+id/game_status_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/draw_button_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-85dp"
        tools:text="Game Status"/>

    <ImageView
        android:id="@+id/dealer_card1_view"
        android:layout_width="57dp"
        android:layout_height="88dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/draw_button_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.119"
        app:srcCompat="@drawable/card"
        />

    <ImageView
        android:id="@+id/dealer_card2_view"
        android:layout_width="57dp"
        android:layout_height="88dp"
        app:srcCompat="@drawable/card"
        app:layout_constraintLeft_toRightOf="@+id/dealer_card1_view"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/draw_button_view"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.119"/>

    <ImageView
        android:id="@+id/dealer_card3_view"
        android:layout_width="57dp"
        android:layout_height="88dp"
        app:srcCompat="@drawable/card"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/draw_button_view"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.119"
        app:layout_constraintLeft_toRightOf="@+id/dealer_card2_view"
        android:layout_marginLeft="22dp"/>

    <ImageView
        android:id="@+id/dealer_card4_view"
        android:layout_width="57dp"
        android:layout_height="88dp"
        app:srcCompat="@drawable/card"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/draw_button_view"
        app:layout_constraintVertical_bias="0.119"
        app:layout_constraintLeft_toRightOf="@+id/dealer_card3_view"
        android:layout_marginLeft="20dp"
        />

    <ImageView
        android:id="@+id/dealer_card5_view"
        android:layout_width="57dp"
        android:layout_height="88dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/draw_button_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.119"
        app:srcCompat="@drawable/card"
        app:layout_constraintLeft_toRightOf="@+id/dealer_card4_view"
        android:layout_marginLeft="20dp"
        />

</android.support.constraint.ConstraintLayout>
